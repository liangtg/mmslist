<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <EditText
        android:id="@+id/mms_input_sms"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/mms_margin_horizontal"
        android:layout_marginRight="@dimen/mms_margin_horizontal"
        android:layout_marginTop="@dimen/mms_margin_vertical"
        android:background="@drawable/mms_input_sms"
        android:editable="false"
        android:focusable="false"
        android:gravity="top|left"
        android:imeOptions="actionSend"
        android:inputType="none"
        android:lines="5"
        android:textAppearance="@style/mms.TextAppearance.InputSms"
        android:textColor="@color/mms_text_black"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <Button
        android:id="@+id/cancel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="@dimen/mms_margin_horizontal"
        android:layout_marginRight="@dimen/mms_margin_horizontal"
        android:background="@drawable/mms_btn_cancel"
        android:minHeight="10dp"
        android:text="取消"
        android:textAppearance="@style/mms.TextAppearance.ColorButton"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/send"
        />

    <Button
        android:id="@+id/send"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/mms_margin_horizontal"
        android:layout_marginRight="@dimen/mms_margin_horizontal"
        android:background="@drawable/mms_btn_send"
        android:minHeight="10dp"
        android:text="发送"
        android:textAppearance="@style/mms.TextAppearance.ColorButton"
        app:layout_constraintLeft_toRightOf="@+id/cancel"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/cancel"
        />

</android.support.constraint.ConstraintLayout>